@using System.Security.Claims
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - ECommerce</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body style="margin: 0; scroll-behavior: auto;">
<header style="background-color: black; width: 100%; border-radius: 1px;">
    <nav style="display: flex; align-content: space-evenly; justify-content: space-evenly; align-items: center; width: 600px; height: 50px; margin-left: 520px;">
        <a href="/" style="text-decoration: none; color: white; ">Home</a> 
        <a href="/Products" style="text-decoration: none; color: white;">Products</a> 
        <a href="/Cart" style="text-decoration: none; color: white;">Cart</a> 
        @if (User.Identity?.IsAuthenticated ?? false)
        {
            <text>
                <span>Hello, @User.FindFirstValue(System.Security.Claims.ClaimTypes.Name) ?? @User.FindFirstValue("email")</span>
                <form method="post" asp-controller="Customers" asp-action="Logout" style="display:inline">
                    <button type="submit">Logout</button>
                </form>
            </text>
        }
        else
        {
            <text>
                <a href="/account/register" style="text-decoration: none; color: white;">Register</a> 
                <a href="/account/login" style="text-decoration: none; color: white;">Login</a>
            </text>
        }
    </nav>
</header>

<main role="main" class="container">
    @RenderBody()
</main>
<footer>
    <p>&copy; @(DateTime.UtcNow.Year) ECommerce</p>
</footer>
@RenderSection("Scripts", required: false)
</body>
</html>