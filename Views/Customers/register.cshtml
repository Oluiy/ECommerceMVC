@model tryout.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}
<h2>Register</h2>

<form asp-action="Register" method="post">
    <div><label asp-for="FirstName"></label><input asp-for="FirstName"/></div>
    <div><label asp-for="LastName"></label><input asp-for="LastName"/></div>
    <div><label asp-for="Email"></label><input asp-for="Email"/></div>
    <div><label asp-for="Password"></label><input asp-for="Password" type="password"/></div>
    <div><label asp-for="PhoneNumber"></label><input asp-for="PhoneNumber"/></div>
    <div><label asp-for="DateOfBirth"></label><input asp-for="DateOfBirth" type="date" /></div>
    <button type="submit" asp-action="Register">Register</button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}