@model tryout.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<div style="max-width: 500px; margin: 60px auto; padding: 30px; background: #ffffff; border-radius: 12px; box-shadow: 0px 6px 18px rgba(0,0,0,0.1); font-family: 'Segoe UI', Roboto, sans-serif;">
    <h2 style="text-align: center; margin-bottom: 25px; font-size: 28px; font-weight: bold; color: #2c3e50;">
        Create an Account
    </h2>

    <form asp-action="Register" method="post" style="display: flex; flex-direction: column; gap: 18px;">
        <div style="display: flex; flex-direction: column;">
            <label asp-for="FirstName" style="font-weight: 600; margin-bottom: 6px; color: #34495e;"></label>
            <input asp-for="FirstName" placeholder="Enter your first name"
                   style="height: 42px; padding: 10px; border: 1px solid #dcdde1; border-radius: 8px; font-size: 16px;" />
        </div>

        <div style="display: flex; flex-direction: column;">
            <label asp-for="LastName" style="font-weight: 600; margin-bottom: 6px; color: #34495e;"></label>
            <input asp-for="LastName" placeholder="Enter your last name"
                   style="height: 42px; padding: 10px; border: 1px solid #dcdde1; border-radius: 8px; font-size: 16px;" />
        </div>

        <div style="display: flex; flex-direction: column;">
            <label asp-for="Email" style="font-weight: 600; margin-bottom: 6px; color: #34495e;"></label>
            <input asp-for="Email" placeholder="Enter your email"
                   style="height: 42px; padding: 10px; border: 1px solid #dcdde1; border-radius: 8px; font-size: 16px;" />
        </div>

        <div style="display: flex; flex-direction: column;">
            <label asp-for="Password" style="font-weight: 600; margin-bottom: 6px; color: #34495e;"></label>
            <input asp-for="Password" type="password" placeholder="Enter your password"
                   style="height: 42px; padding: 10px; border: 1px solid #dcdde1; border-radius: 8px; font-size: 16px;" />
        </div>

        <div style="display: flex; flex-direction: column;">
            <label asp-for="PhoneNumber" style="font-weight: 600; margin-bottom: 6px; color: #34495e;"></label>
            <input asp-for="PhoneNumber" placeholder="Enter your phone number"
                   style="height: 42px; padding: 10px; border: 1px solid #dcdde1; border-radius: 8px; font-size: 16px;" />
        </div>

        <div style="display: flex; flex-direction: column;">
            <label asp-for="DateOfBirth" style="font-weight: 600; margin-bottom: 6px; color: #34495e;">Date of Birth</label>
            <input asp-for="DateOfBirth" type="date"
                   style="height: 42px; padding: 10px; border: 1px solid #dcdde1; border-radius: 8px; font-size: 16px;" />
        </div>

        <button type="submit" asp-action="Register"
                style="margin-top: 10px; padding: 14px; font-size: 18px; font-weight: 600; border: none; border-radius: 8px;
                       background: linear-gradient(135deg, #1e3c72, #2a5298); color: #fff; cursor: pointer;
                       transition: background 0.3s ease-in-out, transform 0.1s;">
            Register
        </button>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
